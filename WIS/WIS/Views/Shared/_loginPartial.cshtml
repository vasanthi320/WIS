@using Microsoft.AspNet.Identity
@using WIS.Models
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav">
            @*<li>
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>*@
            <li class="dropdown user user-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-user"></i>
                    <span style="color: white;" class="hidden-xs">Hello @User.Identity.GetFullName()</span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-fw fa-power-off"></i> Log off</a>
                    </li>
                </ul>
            </li>
        </ul>
    }
}
else



{
    <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
            <a href="#" class="hidden-xs" style="cursor:default;"><i class="fa fa-user"></i> Welcome @User.Identity.Name</a>
            <a href="#" class="dropdown-toggle visible-xs" data-toggle="dropdown">
                <i class="fa fa-user"></i>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <span class="">Welcome @User.Identity.Name</span>
                </li>
            </ul>
        </li>
    </ul>
}

