<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WIS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/plugins/autocomplete/jquery-ui.autocomplete.css" rel="stylesheet" />*@
    <link href="~/Content/plugins/data Tables/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <style>
        .navbar-default {
            background-color: #004990;
            /*text-decoration-color: white;*/
            color: white;
        }

        .dropdown {
            background-color: #004990;
        }

        ul > li > .dropdown open {
            background-color: #004990;
        }

        .navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:hover, .navbar-default .navbar-nav > .open > a:focus {
            background-color: #004990;
        }

        .navbar-default .navbar-nav > li > a {
            color: white;
        }

        ul.nav a:hover, ul.nav a:active, ul.nav a:focus {
            color: white;
        }

        #navbar {
            color: #FFFFFF;
            background-color: #004990;
        }

        #text > ul > li > a {
            color: white;
        }
    </style>
</head>
<body>
    <div id="navbar" class="navbar navbar-default navbar-fixed-top  bg-primary">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="text" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Invoices", "Invoices", "Invoice")</li>
                    <li>@Html.ActionLink("Products/Inventory", "ProductsInventory", "Inventory")</li>
                    <li>@Html.ActionLink("Reports/Dashboards", "Reports", "Report")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        @*<footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
